<h1>List of Tasks</h1>
<ul>
 <% @tasks.each do |task| %>
    <li>
    <%= link_to task.title, task_path(task) %>
     <%= link_to 'DESTROY!', delete_task_path(task), data: {
        turbo_method: 'delete',
        turbo_confirm: 'Are you sure?'
      } %>
    </li>
  <% end %>
</ul>

<%= link_to 'add new task', tasks_new_path %>
